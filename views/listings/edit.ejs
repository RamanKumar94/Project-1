<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your listing</h3>
            <form  method="POST" action="/listings/<%= listing.id %>?_method=PATCH" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-2">
                    <label for="title" class="form-label-sm">Title</label>
                    <input type="text" 
                    name=listing[title] 
                    class="form-control form-control-sm" 
                    id="title" 
                    value="<%= listing.title %>" 
                    required
                    />
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Please enter vaild title</div>
                </div>

                <div class="mb-2">
                    <label for="description" class="form-label-sm">Description</label>
                    <textarea 
                    name=listing[description] 
                    class="form-control form-control-sm" 
                    id="description" 
                    required ><%= listing.description %> 
                    </textarea>
                    <div class="invalid-feedback">Please enter short description</div>
                </div>
                
                <div> 
                    Original Listing Image <br>
                    <img src="<%= originalImageUrl %>" >  
                </div>
                <div class="mb-2">
                    <label for="image" class="form-label-sm">Upload New Image</label>
                    <input type="file" 
                    name=listing[image] 
                    class="form-control form-control-sm" 
                    id="image" 
                    />
                    <div class="invalid-feedback">URL should be vaild</div>
                </div>


                <div class="row">
                    <div class="mb-2 col-md-4">
                        <label for="price" class="form-label-sm">Price</label>
                        <input type="number" 
                        name=listing[price] 
                        class="form-control form-control-sm" 
                        id="price" 
                        value="<%= listing.price %>" 
                        required
                        />
                        <div class="invalid-feedback">Price should be vaild</div>
                    </div>

                    <div class="mb-2 col-md-8">
                        <label for="country" class="form-label-sm">Country</label>
                        <input type="text" 
                        name=listing[country] 
                        class="form-control form-control-sm" 
                        id="country" 
                        value="<%= listing.country %>" 
                        required
                        />
                        <div class="invalid-feedback">Country should be vaild</div>
                    </div>
                </div>
                
                <div class="mb-2">
                    <label for="location" class="form-label-sm">Location</label>
                    <input type="text" 
                    name=listing[location] 
                    class="form-control form-control-sm" 
                    id="location" 
                    value="<%= listing.location %>" 
                    required
                    />
                    <div class="invalid-feedback">Location should be vaild</div>
                </div>

                <button class="btn btn-dark edit-btn mt-3">Edit</button>
                <br><br>
            </form>
        </div>
    </div>
</body>
