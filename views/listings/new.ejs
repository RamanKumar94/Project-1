<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        <h3>Create new listing</h3>
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-2">
                <label for="title" class="form-label-sm">Title</label>
                <input type="text"  
                name=listing[title] 
                id="title" 
                placeholder="Add a catchy title" 
                class="form-control form-control-sm" 
                required
                />
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Please enter title</div>
            </div>

            <div class="mb-2">
                <label for="description" class="form-label-sm">Description</label>
                <textarea 
                name=listing[description] 
                id="description" 
                class="form-control form-control-sm" 
                required></textarea>
                <div class="invalid-feedback">Please enter short description</div>
                <div class="valid-feedback">Success!</div>
            </div>

            <div class="mb-2">
                <label for="image" class="form-label-sm">Upload Listing Image</label>
                <input type="file" name="listing[image]" id="image" class="form-control form-control-sm" required/>
                <div class="invalid-feedback">Please upload valid image</div>
            </div>

            <div class="row">
                <div class="mb-2 col-md-4">
                    <label for="price" class="form-label-sm">Price</label>
                    <input 
                    type="text"
                    name=listing[price] 
                    id="price" 
                    placeholder="1200" 
                    class="form-control form-control-sm" 
                    required
                    />
                    <div class="invalid-feedback">Price should be vaild</div>
                    <div class="valid-feedback">Success!</div>
                </div>

                <div class="mb-2 col-md-8">
                    <label for="country" class="form-label-sm">Country</label>
                    <input type="text" 
                    name=listing[country] 
                    id="country" 
                    placeholder="India" 
                    class="form-control form-control-sm" 
                    required
                    />
                    <div class="invalid-feedback">Country should be vaild</div>
                    <div class="valid-feedback">Success!</div>
                </div>
            </div>

            <div class="mb-2">
                <label for="location" class="form-label-sm">Location</label>
                <input type="text" 
                name=listing[location] 
                id="location" 
                placeholder="Jaipur, Rajasthan" 
                class="form-control form-control-sm" 
                required
                />
                <div class="invalid-feedback">Location should be vaild</div>
                <div class="valid-feedback">Success!</div>
            </div>
            
            <button class="btn btn-dark add-btn mt-3 mb-5">Add</button>
        </form>
    </div>
</div>
</body>
